{
    "compilerOptions": {
        "declaration": true,
        "lib": ["ESNext"],
        "target": "ESNext",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "Node",
        "noImplicitOverride": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "types": [
            "love-typescript-definitions",
            "lua-types/jit"
        ]
    },
    "tstl": {
        "luaTarget": "JIT",
        "buildMode": "library"
    }
}
