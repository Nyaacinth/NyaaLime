{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "lua-local",
            "request": "launch",
            "osx": {
                "env": {
                    "LOVE_EXECUTABLE": "/Applications/love.app/Contents/MacOS/love"
                }
            },
            "linux": {
                "env": {
                    "LOVE_EXECUTABLE": "love"
                }
            },
            "program": {
                "command": "bash"
            },
            "args": ["-c", "'${LOVE_EXECUTABLE} ${workspaceFolder}'"]
        }
    ]
}
